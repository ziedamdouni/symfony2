{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
<h1>Inscription sur le site</h1>
{{ form_start(form) }}
{{ form_row(form.username,{'attr':{'placeholder':"nom de l'utilisateur"}}) }}
{{ form_row(form.email,{'attr':{'placeholder':"adresse email"}}) }}

{{ form_row(form.password,{'attr':{'placeholder':"mot de passe"}}) }}
{{ form_row(form.confirm_password,{'attr':{'placeholder':"confirmer le mot de passe"}}) }}
<br>
<button type="submit"class="btn btn-success">Inscription</button>
{{ form_end(form) }}
{% endblock %}